# Driver Behavior Analytics System - Environment Configuration
# Copy this file to .env and update values for your environment

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8003
LOG_LEVEL=INFO
SECRET_KEY=your-super-secure-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://analytics_user:secure_password@localhost:5432/driver_analytics
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=100

# ========================================
# Model Configuration
# ========================================
MODEL_PATH=./models/saved/
BATCH_SIZE=1000
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# ========================================
# Bayesian Sampling Configuration
# ========================================
N_SAMPLES=2000
N_TUNE=1000
N_CORES=2

# ========================================
# Survival Analysis Configuration
# ========================================
SURVIVAL_TIMEPOINTS=30,60,90,180,365
SIGNIFICANCE_LEVEL=0.05

# ========================================
# Risk Scoring Configuration
# ========================================
RISK_THRESHOLD_LOW=0.3
RISK_THRESHOLD_MEDIUM=0.6
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_CRITICAL=0.95

# ========================================
# Performance Configuration
# ========================================
MAX_CONCURRENT_REQUESTS=1000
RATE_LIMIT_PER_MINUTE=100
SCORING_RATE_LIMIT_PER_MINUTE=1000

# ========================================
# Monitoring Configuration
# ========================================
ENABLE_METRICS=true
PROMETHEUS_PORT=8004
GRAFANA_PORT=3000

# ========================================
# Security Configuration
# ========================================
ENABLE_API_KEY_AUTH=true
CORS_ORIGINS=*
TRUSTED_HOSTS=localhost,127.0.0.1,driver-analytics.local

# ========================================
# Development Configuration
# ========================================
DEBUG=false
RELOAD=false
DEV_MODE=false

# ========================================
# Production Configuration
# ========================================
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
